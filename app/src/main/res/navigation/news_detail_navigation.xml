<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/news_detail_navigation"
    app:startDestination="@id/news_detail_fragment">

    <fragment
        android:id="@+id/news_detail_fragment"
        android:name="com.lorenzo.stonksnews.ui.newsDetail.NewsDetailFragment"
        android:label="News Detail"
        tools:layout="@layout/fragment_news_detail">
        <action
            android:id="@+id/action_news_detail_fragment_to_fullArticleFragment"
            app:destination="@id/fullArticleFragment" />
    </fragment>
    <fragment
        android:id="@+id/fullArticleFragment"
        android:name="com.lorenzo.stonksnews.ui.newsDetail.FullArticleFragment"
        android:label="Full Article"
        tools:layout="@layout/fragment_full_article"/>
</navigation>