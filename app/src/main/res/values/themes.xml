<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StonksNews" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#000E39</item>
        <item name="colorPrimaryVariant">#003F57</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#2554FF</item>
        <item name="colorSecondaryVariant">#29A0D6</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="PrimaryTextAppearance" parent="Theme.StonksNews">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SecondaryTextAppearance" parent="Theme.StonksNews">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ThirdTextAppearance" parent="Theme.StonksNews">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/grey_light</item>
    </style>

    <style name="ThirdTextAppearance.Bold" parent="Theme.StonksNews">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Button.Base" parent="Widget.AppCompat.Button.Colored">
        <item name="textAllCaps">false</item>
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/background_button</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>